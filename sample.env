# Database Configuration
# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=penny_db

# Name of the target table in the PostgreSQL database
TABLE_NAME=california_procurement

# File Paths and Table Configuration
# Path to the raw input CSV file
INPUT_CSV_PATH=PURCHASE ORDER DATA EXTRACT 2012-2015_0.csv

# Path for the output cleaned CSV file
CLEANED_CSV_OUTPUT=procurement_data_cleaned.csv

# AI API Configuration
GEMINI_MODEL=gemini-flash-latest
GOOGLE_API_KEY=INSERT_API_KEY_Here

# Application Configuration
# Maximum retry attempts for failed queries
MAX_QUERY_RETRIES=3

# Session timeout (minutes)
SESSION_TIMEOUT=30

# Example Queries (Configuration)
EXAMPLE_QUERIES=What is the total procurement spending over the years?|Show me the top 10 suppliers by total spending|What are the most purchased items by department?|Show procurement spending by acquisition type for every year
